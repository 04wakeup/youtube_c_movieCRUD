extends layouts/main

block content
    .title 
        h1 #{pageTitle}
    .form-container 
        form(action="/create", method="post")  
            input(type="text", placeholder="Title", name="title", minlength="3", required=true)
            input(type="number", placeholder="Year", name="year", required=true)
            input(type="number", placeholder="Rating", name="rating", required=true)
            textarea(name="synopsis", placeholder="Synopsis", required=true)
            input(type="text", placeholder="Genres", name="genres", required=true)
            input(type="submit", value="Create")